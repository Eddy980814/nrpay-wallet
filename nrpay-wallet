<body>
    <div class="login-box">
        <h2>NR Pay 登入</h2>
        <input type="password" id="password" placeholder="輸入密碼" />
        <button onclick="login()">登入</button>
        <div class="error-message" id="error-message"></div>
    </div>

    <div class="functions" id="functions">
        <button onclick="transfer()">轉帳</button>
        <button onclick="withdraw()">提款</button>
        <button onclick="recharge()">儲值</button>
    </div>

    <script>
        let loginAttempts = 0;
        const correctPassword = "123456"; // 設定正確密碼
        const maxAttempts = 3;

        function login() {
            const password = document.getElementById("password").value;
            const errorMessage = document.getElementById("error-message");

            if (loginAttempts >= maxAttempts) {
                errorMessage.textContent = "錯誤次數過多，請聯絡客服解鎖。";
                return;
            }

            if (password === correctPassword) {
                document.querySelector(".login-box").style.display = "none";
                document.getElementById("functions").style.display = "block";
            } else {
                loginAttempts++;
                errorMessage.textContent = `密碼錯誤！你還有 ${maxAttempts - loginAttempts} 次機會。`;
            }
        }

        function transfer() {
            alert("轉帳功能開發中");
        }

        function withdraw() {
            alert("提款功能開發中");
        }

        function recharge() {
            alert("儲值功能開發中");
        }
    </script>
</body>
